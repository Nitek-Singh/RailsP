<%= link_to 'New Question', new_mc_question_path %>
<% questions.each do |question| %>
    <div id="<%= dom_id(question) %>">
        <p><%= question.question %></p>
        <% choices = [question.answer, question.distractor_1, question.distractor_2] %>
        <% choices.each do |c| %>
            <div>
                <%= radio_button_tag "guess_#{question.id}", c, checked = c == question.answer, disabled: true %>
                <%= label_tag "guess_#{question.id}_#{c}", c %>
            </div>

        <% end %>
        <%= link_to 'Show', mc_question_path(question) %>
        <%= link_to 'Edit', edit_mc_question_path(question) %>
        <%= button_to 'Delete', mc_question_path(question), method: :delete %>
        
        
    </div>
    
<% end %>