<%= link_to 'Home', root_path %>
<%= link_to 'Participation', examinations_path %>

<%= button_to 'Log out', destroy_user_session_path, method: :delete %>
<h1>Register For Exam Here</h1>


<%= form_with model: @examination do |form| %>

    <% if @examination.errors.any? %>
      <% @examination.errors.full_messages.each do |message| %>
        <p><%= message %></p>
        <% end %>
    <% end %>

    <div>
    <%= form.label :full_name %><br>
    <%= form.text_field :full_name %>
    </div>

    <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
    </div>

    <div>
    <%= form.label :department %><br>
    <%= form.text_field :department %>
    </div>

    <div>
    <%= form.label :college_name %><br>
    <%= form.text_field :college_name %>
    </div>

    <div>
    <%= form.label :mobile_number %><br>
    <%= form.text_field :mobile_number %>
    </div>
  
    <br>
    <div>
    <%= form.submit :Submit %>
    </div>


    <% end %>